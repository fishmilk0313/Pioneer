		<% @post.comments.each do |comment| %>
			<div class ="col-xs-offset-3 col-xs-6">
				<div class ="col-xs-4">
					<%= link_to users_user_path(comment.user) do %>
					<%= attachment_image_tag(comment.user, :profile_image, fallback: "no-image.png", class: "profile-image",style: "width: 60px; height: 60px;") %>
					<% end %>
				</div>
				<div class ="comment col-xs-7">
					<%= comment.comment %>
				</div>

				<% if comment.user == current_user %>
					<div class ="col-xs-1">
						<%= link_to post_comment_path(comment.post_id, comment.id), method: :delete,remote: true, "data-confirm" => "本当に消しますか？" do %>
						<button type="button" class="btn btn-danger" aria-label="Left Align"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
						<% end %>
					</div>
				<% end %>
			</div>
		<% end %>

