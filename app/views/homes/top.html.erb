					<div class ="top-topic-item">
						<%= link_to users_topic_path(@topic[3]) do %>
							<%= attachment_image_tag(@topic[3], :image, fallback: "no-image.png", class: "top-topic col-xs-2") %>
						<% end %>
					</div>

					<div class="top-topic-item">
						<h3><%= @topic[3].title %></h3></br>
						<P><%= @topic[3].text %></P>
					</div>
			</div>

		</div>
	</div>
</div>


