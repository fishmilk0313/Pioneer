<div class ="container">
	<div class ="row">
		<h2 class ="page-title text-center">トピック編集</h2>
		<%= form_for(@topic, url: hosts_topic_path, method: :patch)do |f| %>
			<div class ="col-sm-12">
				<div class ="img_field text-center">
			 		<%=  attachment_image_tag(@topic, :image, fallback: "no-image.png", size:"400x300") %>
		 	 	</div>
		 		<div class ="col-sm-6">
		 			<%= f.attachment_field :image %>
				</div>
				<div class ="col-sm-6 text-right">
 					<%= f.collection_select(:category_id, @categories, :id, :name, prompt: "-- 選択してください --") %>
 				</div>
 		 	</div>

		 	<div class ="field col-sm-12">
		 		<%= f.text_field :title, size: 100 %>
		 	</div>

			<div class ="field body col-sm-12">
		 		<%= f.text_field :text %>
		 	</div>

			<div class ="actions col-sm-2">
		 		<%= f.submit "新規投稿" %>
		 	</div>
		 <% end %>
		</div>
	</div>
</div>