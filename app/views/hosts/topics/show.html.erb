<div class ="container topic-list-body">
	<div class ="row">
		<div class ="topic-show-title col-xs-offset-1 col-xs-4">
			<h2><%= @topic.title %> </h2>
		</div>
		<div class ="topic-create col-xs-offset-4 col-xs-3 text-right">
			<h3> <%= @topic.created_at.strftime('%Y/%m/%d/%R') %></h3>
			<h4> カテゴリー: <%= @topic.category.name %> </h4>
		</div>

		<div class ="show-topic-image col-xs-12 text-center">
			<%= attachment_image_tag(@topic, :image, class: "big-topic-image") %>
		 </div>
		 <div class ="topic-text col-xs-offset-1 col-xs-11">
		    <%= @topic.text %>
		</div>
		<div class ="col-xs-12 text-right">
		<%= link_to "編集", edit_hosts_topic_path(@topic), class: "btn btn-warning" %>
		<%= link_to "削除", hosts_topic_path(@topic), method: :delete, class: "btn btn-danger" %>
		</div>
			<div class ="text-right">
		       	<% @topic.tags.each do |tag| %>
		        	<span class="label tag"><%= tag.name %></span>
		      	<% end %>
		 	</div>
    </div>
</div>
