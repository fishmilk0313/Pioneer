<div class ="container">
	<div class ="row">
		<div class ="post-frame col-xs-offset-3 col-xs-6">
         	<%= render  'users/posts/post_show', post: @post %>
         		<div class ="col-xs-12 text-right">
					<%= link_to users_post_path(@post), method: :delete, "data-confirm" => "本当に消しますか？" do %>
						<button type="button" class="btn btn-danger" aria-label="Left Align"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
					<% end %>
				</div>
	    </div>
	</div>
</div>