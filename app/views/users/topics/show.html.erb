<div class ="container">
	<div class ="row">
		<div class ="top-topic-body show-topic-body col-xs-12">

			<div class ="topic-show-title  col-xs-6 text-center">
				<h3><%= @topic.title %> </h3>
			</div>
			<div class ="topic-create col-xs-offset-1 col-xs-5 text-right">
				<h3> <%= @topic.created_at.strftime('%Y/%m/%d') %></h3>
				<h4> カテゴリー: <%= @topic.category.name %> </h4>
			</div>


			<div class ="show-topic-image col-lg-offset-1 col-lg-10">
				 <%= attachment_image_tag(@topic, :image, class: "topic-image-show ") %>
	        </div>

	        <hr class ="topic-boder col-xs-offset-1 col-xs-10 text-center">

	        <div class ="show-topic-frame col-lg-offset-2 col-lg-8">
	        	<p class="show-topic-text"><%= @topic.text %></p>
	        </div>

	        <hr class ="topic-boder col-xs-offset-1 col-xs-10 text-center">

			
	        <div class ="text-right col-xs-12">
        		<% @topic.tags.each do |tag| %>
       				<span class="label"><%= tag.name %></span>
       			<% end %>
    		</div>
	    </div>
    </div>
</div>
