	<div class="user-info">
		<div class ="user-image text-center">
			<%= attachment_image_tag user, :profile_image, style: "width:230px; heigth: 230px;", fallback: "no-image.png", class:"profile-image" %>
		</div>
		<tbody>
		<table class="table">
			<tbody>
			<tr>
				<td>name</td>
				<td> <%= user.name %></td>
			</tr>
			<tr>
				<td>intrduction</td>
			</tr>

			<tr>
			<td colspan="2"><%= user.introduction %></td>
			</tr>

			<tr>
				<td>following</td>
				<td><% user ||= current_user %>
				  <div class="stats">
				   <%= link_to following_users_user_path(user) do%>
			    <strong id="following" class="stat">
				     <%= user.followings.count %>
				 </strong>
				 <% end %>
				   </div>
          		</td>
          	</tr>
          	<tr>
          	    <td>followers</td>
			<td><% user ||= current_user %>
			  <div class="stats">
			   <%= link_to followers_users_user_path(user) do%>
			    <strong id="followers" class="stat">
				     <%= user.followers.count %>
				 </strong>
				 <% end %>
			   </div>
			</td>
		  </tr>
		</tbody>
	</table>
		<td>
		<% unless current_user == user %>
		  <% if current_user.following?(user) %>
		    <%= form_for(current_user.following_relationships.find_by(following_id: user.id), html: { method: :delete }) do |f| %>
            <%= f.submit "Unfollow",class: 'btn btn-danger btn-block' %>
		  <% end %>
		  <% else %>
		    <%= form_for(current_user.following_relationships.build(following_id: user.id)) do |f| %>
		     <div><%= f.hidden_field :following_id %></div>
		     <%= f.submit "Follow", class: 'btn btn-primary btn-block' %>
		    <% end %>
		  <% end %>
		<% end %> 
		</td>
	<%if user.id == current_user.id %>
		<%= link_to edit_users_user_path(current_user.id) do %>
		<button type="button" class="btn btn-default btn-block"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
		</button>
		<% end %>
		<% else %>
		<%= link_to users_user_path(current_user.id) do %>
		<button type="button" class="btn btn-default btn-block"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
		</button>
		<% end %>
	<% end %>
</div>