<div class="dm_list col-xs-offset-3 col-xs-6">
	<h1 class="text-center">DM</h1>
	<% rooms.each do |room| %>
	    <div class="dm_list__content  col-xs-12">
		    <%= link_to room_path(room), class: "dmlist_content_link" do %>
		        <div class="dmlist_content_linkbox col-xs-3">
		           <strong class="dmlist_content_linkbox_name"></strong>
		              <%= opponent_user(room) %>
		            </h3>
		        </div>
		            <div class="dmlist_content_linkbox_message col-xs-7">
		              <%= most_new_message_preview(room) %>
		            </div>
		            <div class ="dm_delete col-xs-2">
		        	<%= link_to room_path(room), method: :delete, "data-confirm" => "本当に消しますか？" do %>
						<button type="button" class="btn btn-danger" aria-label="Left Align"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
					<% end %>
				</div>
		    <% end %>
		</div>
	<% end %>
</div>